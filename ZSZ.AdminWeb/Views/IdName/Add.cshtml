
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pd-20">
    <div class="row cl">
        <label class="form-label col-3"><span class="c-red">*</span>类型名：</label>
        <div class="formControls col-5">
            <input type="text" class="input-text" value="" placeholder="" id="typeName" name="typeName" datatype="*2-16" nullmsg="类型名不能为空">
        </div>
        <div class="col-4"> </div>
    </div>
    <div class="row cl">
        <label class="form-label col-3"><span class="c-red">*</span>名称：</label>
        <div class="formControls col-5">
            <input type="text" class="input-text" value="" placeholder="" id="name" name="name" datatype="*2-16" nullmsg="名称不能为空">
        </div>
        <div class="col-4"> </div>
    </div>
    <div class="row cl">
        <div class="col-9 col-offset-3">
            <input class="btn btn-primary radius" type="button" id="btnSave" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
        </div>
    </div>
</div>
@section FooterScript
{
    <script type="text/javascript">
    $(function () {
        $("#btnSave").click(function () {
            var typeName = $("#typeName").val();
            var name = $("#name").val();
            $.ajax({
                type: "post", url: "/IdName/add", data: { name: name, typeName: typeName },
                success: function (result) {
                    if(result.status=="ok")
                    {
                        alert("添加成功");
                    }
                    else
                    {
                        alert("添加失败");
                    }
                },
                error: function () {
                    alert("出错了");
                }
            });
        });
    });
    </script>
}